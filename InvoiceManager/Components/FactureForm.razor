@inject IFactureService FactureService
@inject IClientService ClientService
@using InvoiceManager.Data.Entities
@using InvoiceManager.Services.Interfaces
@using Microsoft.AspNetCore.Components

@if (!string.IsNullOrEmpty(successMessage))
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        @successMessage
        <button type="button" class="btn-close" @onclick="() => successMessage = null"></button>
    </div>
}

@if (!string.IsNullOrEmpty(errorMessage))
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        @errorMessage
        <button type="button" class="btn-close" @onclick="() => errorMessage = null"></button>
    </div>
}

<EditForm Model="facture" OnValidSubmit="HandleValidSubmit" FormName="facture-form">
    <DataAnnotationsValidator />
    <ValidationSummary />

    <!-- Facture principale -->
    <div class="mb-3">
        <label class="form-label">Numéro</label>
        @if (facture.Id == 0)
        {
            <p class="form-control-plaintext text-muted"><em>Sera généré automatiquement</em></p>
        }
        else
        {
            <InputText class="form-control" @bind-Value="facture.Numero" disabled />
        }
    </div>

    <div class="mb-3">
        <label class="form-label">Statut</label>
        <div>
            <span class="badge @GetStatusBadgeClass(facture.Statut)">@facture.Statut</span>
        </div>
    </div>

    <div class="mb-3">
        <label class="form-label">Client</label>
        <InputSelect class="form-control" @bind-Value="facture.ClientId" disabled="@IsReadOnly">
            <option value="0">Sélectionner un client</option>
            @foreach (var c in clients)
            {
                <option value="@c.Id">@c.Nom</option>
            }
        </InputSelect>
        <ValidationMessage For="@(() => facture.ClientId)" />
    </div>

    <h4>Lignes de facture</h4>

    <table class="table">
        <thead>
            <tr>
                <th>Description</th>
                <th>Quantité</th>
                <th>Prix Unitaire</th>
                <th>Total</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var ligne in facture.Lignes)
            {
                <tr>
                    <td>
                        <InputText class="form-control"
                                   @bind-Value="ligne.Description" 
                                   disabled="@IsReadOnly" />
                        <ValidationMessage For="@(() => ligne.Description)" />
                    </td>
                    <td>
                        <input type="number" 
                               class="form-control" 
                               @bind="ligne.Quantite" 
                               @oninput="@((e) => OnQuantiteChanged(ligne, e))"
                               disabled="@IsReadOnly"
                               min="1" />
                        <ValidationMessage For="@(() => ligne.Quantite)" />
                    </td>
                    <td>
                        <input type="number" 
                               class="form-control" 
                               @bind="ligne.PrixUnitaire" 
                               @oninput="@((e) => OnPrixChanged(ligne, e))"
                               disabled="@IsReadOnly"
                               step="0.01"
                               min="0.01" />
                        <ValidationMessage For="@(() => ligne.PrixUnitaire)" />
                    </td>
                    <td>@ligne.TotalLigne.ToString("C")</td>
                    <td>
                        @if (!IsReadOnly)
                        {
                            <button type="button" class="btn btn-danger btn-sm" @onclick="@(() => RemoveLigne(ligne))">Supprimer</button>
                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>

    @if (!IsReadOnly)
    {
        <button type="button" class="btn btn-secondary mb-3" @onclick="AddLigne">Ajouter une ligne</button>
    }

    <div class="card bg-light p-3">
        <p class="mb-1"><strong>Total HT :</strong> @TotalHT.ToString("C")</p>
        <p class="mb-1"><strong>TVA (20%) :</strong> @Tva.ToString("C")</p>
        <p class="mb-0 fs-5"><strong>Total TTC :</strong> @TotalTTC.ToString("C")</p>
    </div>

    <div class="mt-3">
        @if (!IsReadOnly)
        {
            <button type="submit" class="btn btn-primary">Enregistrer</button>
        }

        @if (facture.Id != 0 && facture.Statut == FactureStatut.Brouillon)
        {
            <button type="button" class="btn btn-success ms-2" @onclick="ValiderFacture">Valider la facture</button>
        }

        @if (facture.Statut == FactureStatut.Validee)
        {
            <button type="button" class="btn btn-warning ms-2" @onclick="AnnulerFacture">Annuler la facture</button>
        }

        @if (FactureToEdit != null)
        {
            <button type="button" class="btn btn-secondary ms-2" @onclick="HandleCancel">Fermer</button>
        }
    </div>
</EditForm>

@code {
    [Parameter] public Facture? FactureToEdit { get; set; }
    [Parameter] public EventCallback OnSaved { get; set; }
    [Parameter] public EventCallback OnCancelled { get; set; }

    private Facture facture = new Facture();
    private List<Client> clients = new();
    private string? successMessage;
    private string? errorMessage;

    private bool IsReadOnly => facture.Statut != FactureStatut.Brouillon;

    private decimal TotalHT => facture.Lignes.Sum(l => l.TotalLigne);
    private decimal Tva => TotalHT * 0.2m;
    private decimal TotalTTC => TotalHT + Tva;

    protected override async Task OnInitializedAsync()
    {
        clients = await ClientService.GetAllAsync();
        SyncFromParameters();
    }

    protected override void OnParametersSet()
    {
        SyncFromParameters();
        successMessage = null;
        errorMessage = null;
    }

    private void OnQuantiteChanged(LigneFacture ligne, ChangeEventArgs e)
    {
        if (int.TryParse(e.Value?.ToString(), out int quantite))
        {
            ligne.Quantite = quantite;
            StateHasChanged();
        }
    }

    private void OnPrixChanged(LigneFacture ligne, ChangeEventArgs e)
    {
        if (decimal.TryParse(e.Value?.ToString(), out decimal prix))
        {
            ligne.PrixUnitaire = prix;
            StateHasChanged();
        }
    }

    private async Task HandleValidSubmit()
    {
        try
        {
            successMessage = null;
            errorMessage = null;

            if (facture.Lignes.Count == 0)
            {
                errorMessage = "Veuillez ajouter au moins une ligne à la facture.";
                return;
            }

            facture.TotalHT = TotalHT;
            facture.TotalTTC = TotalTTC;

            if (facture.Id == 0)
            {
                await FactureService.AddAsync(facture);
                successMessage = $"Facture créée avec succès.";
            }
            else
            {
                await FactureService.UpdateAsync(facture);
                successMessage = $"Facture '{facture.Numero}' mise à jour avec succès.";
            }

            if (OnSaved.HasDelegate)
            {
                await OnSaved.InvokeAsync();
            }
        }
        catch (Exception ex)
        {
            errorMessage = $"Erreur lors de l'enregistrement: {ex.Message}";
        }
    }

    private async Task ValiderFacture()
    {
        try
        {
            if (facture.Lignes.Count == 0)
            {
                errorMessage = "Impossible de valider une facture sans ligne.";
                return;
            }

            if (facture.Id != 0)
            {
                await FactureService.ValiderFactureAsync(facture.Id);
                facture.Statut = FactureStatut.Validee;
                successMessage = "Facture validée avec succès. Elle ne peut plus être modifiée.";
                if (OnSaved.HasDelegate) await OnSaved.InvokeAsync();
            }
        }
        catch (Exception ex)
        {
            errorMessage = $"Erreur lors de la validation: {ex.Message}";
        }
    }

    private async Task AnnulerFacture()
    {
        try
        {
            if (facture.Id != 0)
            {
                await FactureService.AnnulerFactureAsync(facture.Id);
                facture.Statut = FactureStatut.Annulee;
                successMessage = "Facture annulée.";
                if (OnSaved.HasDelegate) await OnSaved.InvokeAsync();
            }
        }
        catch (Exception ex)
        {
            errorMessage = $"Erreur lors de l'annulation: {ex.Message}";
        }
    }

    private void AddLigne()
    {
        facture.Lignes.Add(new LigneFacture());
        StateHasChanged();
    }

    private void RemoveLigne(LigneFacture ligne)
    {
        facture.Lignes.Remove(ligne);
        StateHasChanged();
    }

    private async Task HandleCancel()
    {
        facture = new Facture();
        successMessage = null;
        errorMessage = null;
        
        if (OnCancelled.HasDelegate)
        {
            await OnCancelled.InvokeAsync();
        }
    }

    private void SyncFromParameters()
    {
        if (FactureToEdit != null)
        {
            facture = new Facture
            {
                Id = FactureToEdit.Id,
                Numero = FactureToEdit.Numero,
                ClientId = FactureToEdit.ClientId,
                DateFacture = FactureToEdit.DateFacture,
                Lignes = FactureToEdit.Lignes.ToList(),
                TotalHT = FactureToEdit.TotalHT,
                TotalTTC = FactureToEdit.TotalTTC,
                Statut = FactureToEdit.Statut
            };
        }
        else if (facture.Id != 0)
        {
            facture = new Facture();
        }
    }

    private string GetStatusBadgeClass(FactureStatut statut) => statut switch
    {
        FactureStatut.Brouillon => "bg-secondary",
        FactureStatut.Validee => "bg-success",
        FactureStatut.Annulee => "bg-danger",
        _ => "bg-secondary"
    };
}
