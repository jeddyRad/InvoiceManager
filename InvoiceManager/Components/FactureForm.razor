@inject IFactureService FactureService
@inject IClientService ClientService
@using InvoiceManager.Data.Entities
@using InvoiceManager.Services.Interfaces

<EditForm Model="facture" OnValidSubmit="HandleValidSubmit">
    <DataAnnotationsValidator />
    <ValidationSummary />

    <div class="mb-3">
        <label class="form-label">Numéro</label>
        <InputText class="form-control" @bind-Value="facture.Numero" />
        <ValidationMessage For="@(() => facture.Numero)" />
    </div>

    <div class="mb-3">
        <label class="form-label">Client</label>
        <InputSelect class="form-control" @bind-Value="facture.ClientId">
            <option value="">Sélectionner un client</option>
            @foreach (var c in clients)
            {
                <option value="@c.Id">@c.Nom</option>
            }
        </InputSelect>
        <ValidationMessage For="@(() => facture.ClientId)" />
    </div>

    <button type="submit" class="btn btn-primary">Enregistrer</button>
</EditForm>

@code {
    [Parameter] public Facture? FactureToEdit { get; set; }

    private Facture facture = new Facture();
    private List<Client> clients = new();

    protected override async Task OnInitializedAsync()
    {
        clients = await ClientService.GetAllAsync();

        if (FactureToEdit != null)
        {
            facture = new Facture
            {
                Id = FactureToEdit.Id,
                Numero = FactureToEdit.Numero,
                ClientId = FactureToEdit.ClientId
            };
        }
    }

    private async Task HandleValidSubmit()
    {
        if (facture.Id == 0)
            await FactureService.AddAsync(facture);
        else
            await FactureService.UpdateAsync(facture);
    }
}
