@inject IFactureService FactureService
@inject IClientService ClientService
@using InvoiceManager.Data.Entities
@using InvoiceManager.Services.Interfaces

<EditForm Model="facture" OnValidSubmit="HandleValidSubmit">
    <DataAnnotationsValidator />
    <ValidationSummary />

    <div class="mb-3">
        <label class="form-label">Numéro</label>
        <InputText class="form-control" @bind-Value="facture.Numero" />
        <ValidationMessage For="@(() => facture.Numero)" />
    </div>

    <div class="mb-3">
        <label class="form-label">Client</label>
        <InputSelect class="form-control" @bind-Value="facture.ClientId">
            <option value="">Sélectionner un client</option>
            @foreach (var c in clients)
            {
                <option value="@c.Id">@c.Nom</option>
            }
        </InputSelect>
        <ValidationMessage For="@(() => facture.ClientId)" />
    </div>

    <button type="submit" class="btn btn-primary">Enregistrer</button>
</EditForm>

<h4>Lignes de facture</h4>

<table class="table">
    <thead>
        <tr>
            <th>Description</th>
            <th>Quantité</th>
            <th>Prix Unitaire</th>
            <th>Total</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var ligne in facture.Lignes)
        {
            <tr>
                <td>
                    <InputText class="form-control" @bind-Value="ligne.Description" />
                    <ValidationMessage For="@(() => ligne.Description)" />
                </td>
                <td>
                    <InputNumber class="form-control" @bind-Value="ligne.Quantite" />
                    <ValidationMessage For="@(() => ligne.Quantite)" />
                </td>
                <td>
                    <InputNumber class="form-control" @bind-Value="ligne.PrixUnitaire" />
                    <ValidationMessage For="@(() => ligne.PrixUnitaire)" />
                </td>
                <td>@ligne.TotalLigne</td>
                <td>
                    <button type="button" class="btn btn-danger btn-sm" @onclick="@(() => RemoveLigne(ligne))">Supprimer</button>
                </td>
            </tr>
        }
    </tbody>
</table>

<button type="button" class="btn btn-secondary" @onclick="AddLigne">Ajouter une ligne</button>

<p><strong>Total HT :</strong> @TotalHT</p>
<p><strong>TVA (20%) :</strong> @Tva</p>
<p><strong>Total TTC :</strong> @TotalTTC</p>

@code {
    [Parameter] public Facture? FactureToEdit { get; set; }

    private Facture facture = new Facture();
    private List<Client> clients = new();
    private decimal TotalHT => facture.Lignes.Sum(l => l.TotalLigne);
    private decimal Tva => TotalHT * 0.2m; // TVA 20%
    private decimal TotalTTC => TotalHT + Tva;

    protected override async Task OnInitializedAsync()
    {
        clients = await ClientService.GetAllAsync();

        if (FactureToEdit != null)
        {
            facture = new Facture
            {
                Id = FactureToEdit.Id,
                Numero = FactureToEdit.Numero,
                ClientId = FactureToEdit.ClientId
            };
        }
    }

    private async Task HandleValidSubmit()
    {
        // Calcul déjà automatique via propriétés
        facture.TotalHT = TotalHT;
        facture.TotalTTC = TotalTTC;

        if (facture.Id == 0)
            await FactureService.AddAsync(facture);
        else
            await FactureService.UpdateAsync(facture);

        // Réinitialiser le formulaire ou naviguer
    }

    private void AddLigne()
    {
        facture.Lignes.Add(new LigneFacture());
    }

    private void RemoveLigne(LigneFacture ligne)
    {
        facture.Lignes.Remove(ligne);
    }

  

}
