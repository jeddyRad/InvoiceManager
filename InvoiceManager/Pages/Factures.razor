@page "/factures"
@using Microsoft.AspNetCore.Components.Web
@using InvoiceManager.Components
@using InvoiceManager.Data.Entities
@using InvoiceManager.Services.Interfaces
@using Microsoft.EntityFrameworkCore.Metadata.Internal
@inject IFactureService FactureService
@inject NavigationManager Navigation
@rendermode @(new Microsoft.AspNetCore.Components.Web.InteractiveServerRenderMode())

<ErrorBoundary>
    <ChildContent>
        <h3>Liste des Factures</h3>
        <FactureForm FactureToEdit="selectedFacture" OnSaved="HandleSaved" OnCancelled="HandleCancelled" />

        @if (factures == null)
        {
            <p><em>Chargement...</em></p>
        }
        else
        {
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>Id</th>
                        <th>Numéro</th>
                        <th>Client</th>
                        <th>Date</th>
                        <th>Total HT</th>
                        <th>Total TTC</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var facture in factures)
                    {
                        <tr>
                            <td>@facture.Id</td>
                            <td>@facture.Numero</td>
                            <!-- ⚠️ PROBLÈME POTENTIEL : facture.Client peut être null -->
                            <td>@(facture.Client?.Nom ?? "N/A")</td>
                            <td>@facture.DateFacture.ToShortDateString()</td>
                            <td>@facture.TotalHT.ToString("C")</td>
                            <td>@facture.TotalTTC.ToString("C")</td>
                            <td>
                                <button type="button" class="btn btn-link" @onclick="() => EditFacture(facture.Id)">Éditer</button>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        }
    </ChildContent>
    <ErrorContent Context="error">
        <div class="alert alert-danger">
            <h4>Une erreur s'est produite</h4>
            <p>@error.Message</p>
            <button class="btn btn-primary" @onclick="ReloadPage">Recharger</button>
        </div>
    </ErrorContent>
</ErrorBoundary>

@code {
    private List<Facture>? factures;
    private Facture? selectedFacture;

    protected override async Task OnInitializedAsync()
    {
        try
        {
            await LoadFactures();
        }
        catch (Exception ex)
        {
            // Loguer l'erreur
            Console.WriteLine($"Erreur lors du chargement des factures: {ex.Message}");
            factures = new List<Facture>(); // Éviter null
        }
    }

    private async Task LoadFactures()
    {
        factures = await FactureService.GetAllAsync();
    }

    private async Task EditFacture(int factureId)
    {
        try
        {
            selectedFacture = await FactureService.GetByIdAsync(factureId);
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Erreur lors de l'édition de la facture: {ex.Message}");
        }
    }

    private async Task HandleSaved()
    {
        try
        {
            await LoadFactures();
            selectedFacture = null;
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Erreur lors de la sauvegarde: {ex.Message}");
        }
    }

    private void HandleCancelled()
    {
        selectedFacture = null;
    }

    private void ReloadPage()
    {
        Navigation.NavigateTo(Navigation.Uri, forceLoad: true);
    }
}