{
  "ConnectionStrings": {
    "DefaultConnection": "Data Source=invoice_manager.db"
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "DatabaseSettings": {
    "BackupPath": "Backups",
    "EnableAutoBackup": true,
    "BackupIntervalHours": 24,
    "RetentionDays": 30
  }
}
